{% extends "::base.html.twig" %}
{% block title %}Gestion des produits{% endblock %}
{% block body %}
    <div class="container-fluid container-fullw bg-white">
        <div class="row">
            <div class="col-md-12">
                <h5 class="over-title margin-bottom-15"><span class="text-bold">Formulaire</span></h5>
                <form action="{{ path('produit',{'id':produit.id}) }}" method="post" role="form" id="form">
                    {{ form_widget(form._token) }}
                    <div class="row">
                        {{ formulaire.input("col-md-3","Code",form.code,true) }}
                        {{ formulaire.input("col-md-3","Libelle",form.libelle,true) }}
                        {{ formulaire.select2("col-md-3","Tva",form.tva,true) }}
                    </div>
                    {{ macro.enregistrer }}
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h5 class="over-title margin-bottom-15"><span class="text-bold">Liste des produits</span></h5>
                <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Libelle</th>
                            <th>Tva</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produit in produits %}
                            <tr>
                                <td>{{ produit.code }}</td>
                                <td>{{ produit.libelle }}</td>
                                <td>{{ produit.tva }}</td>
                                <td>
                                    {{ macro.edit(path('produit',{'id':produit.id})) }}
                                    {{ macro.delete(path('delete_produit',{'id':produit.id})) }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}